---
import { Image } from 'astro:assets'
import PlaceholderImage from "../images/project/placeholder.png"
interface Props {
  title: string
  type: string
  description: string
  image?: any
  alt: string
}

const { title, type, description, image, alt } = Astro.props
---

<div
  class="flex flex-col items-center gap-4 rounded-lg border border-color-border bg-card p-4 shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:shadow-xl md:max-w-[500px] w-fit"
>
  <div class="text-center">
    <h3 class="font-bold text-2xl">{title}</h3>
    <p class="italic text-muted -mt-1">{type}</p>
  </div>

  <Image src={image || PlaceholderImage} alt={alt} class="rounded-lg h-[140px] w-[220px] object-cover md:h-[280px] md:w-[440px]" />

  <p class="font-secondary w-full text-left">{description}</p>
</div>